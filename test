                                        }
                                        echo '</form>';
                            }

                            else {
                            echo '<form>';

                                echo '<input type ="hidden" class = "id" value="'.$ID.'"/>';
                                echo '<input type ="button" class = "btnApprove" />';

                                if ($approvals > 0) {
                                //echo '<tr><td>';

                                        echo '&nbsp;<span style = "color:red;font-weight:bold;font-size:16">'.$approvals.'</font>';
                                        }
                                        echo '</form>';
                            }

                            echo '</td></tr></table>';